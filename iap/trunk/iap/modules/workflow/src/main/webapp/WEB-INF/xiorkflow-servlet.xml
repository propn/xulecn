<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd"><!--  - Application context definition for "springapp" DispatcherServlet.  -->
<beans>

	<!-- ========================= DEFINITIONS OF PUBLIC CONTROLLERS ========================= -->

	<bean id="defaultHandlerMapping"
		class="org.springframework.web.servlet.handler.BeanNameUrlHandlerMapping" />

	<bean name="/addprocess.xf" class="org.leixu.iap.workflow.web.AddProcess">
		<property name="processService">
			<ref bean="processService" />
		</property>
	</bean>

	<bean name="/deleteprocess.xf"
		class="org.leixu.iap.workflow.web.DeleteProcess">
		<property name="processService">
			<ref bean="processService" />
		</property>
	</bean>

	<bean name="/getprocess.xf" class="org.leixu.iap.workflow.web.GetProcess">
		<property name="processService">
			<ref bean="processService" />
		</property>
	</bean>

	<bean name="/listprocess.xf" class="org.leixu.iap.workflow.web.ListProcess">
		<property name="processService">
			<ref bean="processService" />
		</property>
	</bean>

	<bean name="/updateprocess.xf"
		class="org.leixu.iap.workflow.web.UpdateProcess">
		<property name="processService">
			<ref bean="processService" />
		</property>
	</bean>

</beans>
