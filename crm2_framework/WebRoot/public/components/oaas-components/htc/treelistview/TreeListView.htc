输入参数：
	item	:树表
	rowId	:行Id
	
				
输出参数：
	行所在的树表中的位置
************************************************************************/
function getItemIndexByRowId(item,rowId)
{
	for (var i=0;i<item.items.length;i++)
	{
		
		if (item.items[i].row.id==rowId)
		{
			return item.items[i];
		}
		if (item.items[i].items!=null)
		{
			var ret=getItemIndexByRowId(item.items[i],rowId);
			if(ret!=null)
			{
				return ret;
			}
		}
	}
	return null;
}

