<?xml version="1.0" encoding="GB2312"?>
<root>
	<msg_head>
		<from>来源系统编码</from>
		<to>VSOP</to>
		<msg_type>message_request</msg_type>
		<serial>外部流水</serial>
		<out_order_type>工单类型编码</out_order_type>
	</msg_head>
	<interface_msg>
		<public>
			<order_id>订单ID</order_id>
			<order_act_type>订单动作</order_act_type>
		</public>
		<user_info>
			<!--套餐信息-->
			<pproductoffer_info>
				<ppproduct_act_type>套餐动作：订购、退订、变更-</ppproduct_act_type>
			</pproductoffer_info>
			<!--产品信息-->
			<prod_info>
				<prod_no>产品号码</prod_no>
				<prod_type>产品类型</prod_type>
				<area_code>本地网编码</area_code>
			</prod_info>
			<!--增值产品信息-->
			<sub_products>
				<!--业务平台约束串-->
				<!--增值产品A：1，2 增值产品B：2，3    1,2;2,3-->
				<control>
					增值产品业务平台串（增值产品间的串用分隔符分隔）＋
					增值产品组业务平台串（增值产品组之间的串用分隔符分隔）
				</control>
				<!--多条记录，按业务平台分组-->
				<业务平台N编码>
					<!--同一业务平台增值产品按退订、订购排序生成sub_product节点 -->
					<!--同一个增值产品变更如果涉及到多个销售品，需要裂变成多个节点 -->
					<sub_product>
						<sub_product_code>增值产品1编码</sub_product_code>
						<oldsub_product_code>
							原增值产品编码
						</oldsub_product_code>
						<act_type>
							增值产品动作0：新订产品1：加入已有产品2：替换已有产品3：退订产品4：产品退出套餐
						</act_type>
						<idtype>0/1/2</idtype>
						<id>
							销售品ID idtype为0，本字段填销售品ID，
							idtype为1，本字段填增值业务捆绑销售品ID
							idtype为2，本字段填CRM传统+增值业务的捆绑销售品ID，跨ISMP和X平台的增值业务捆绑销售品ID
						</id>
						<prodCharacters>
							attr_code1=attr_val1;.....attr_coden=attr_valn
						</prodCharacters>
					</sub_product>
					<sub_product>
						<sub_product_code>增值产品N编码</sub_product_code>
						<oldsub_product_code>
							原增值产品编码
						</oldsub_product_code>
						<act_type>
							增值产品动作0：新订产品1：加入已有产品2：替换已有产品3：退订产品4：产品退出套餐
						</act_type>
						<idtype>0/1/2</idtype>
						<id>
							销售品ID idtype为0，本字段填销售品ID，
							idtype为1，本字段填增值业务捆绑销售品ID
							idtype为2，本字段填CRM传统+增值业务的捆绑销售品ID，跨ISMP和X平台的增值业务捆绑销售品ID
						</id>
						<prodCharacters>
							attr_code1=attr_val1;.....attr_coden=attr_valn
						</prodCharacters>
					</sub_product>
				</业务平台N编码>
			</sub_products>
			<!--扩展信息,-->
			<extendCharacters>
				<!--多条记录,属性编码唯一-->
				<扩展属性编码1></扩展属性编码1>
				<扩展属性编码N></扩展属性编码N>
			</extendCharacters>
		</user_info>
	</interface_msg>
</root>